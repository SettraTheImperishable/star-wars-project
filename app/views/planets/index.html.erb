<h1>All Planets</h1>
<% @planets.each do |planet| %>
  <h2><%= planet.name %></h2>

  <% unless planet.characters.empty? %>
    <h3>Characters from <%= planet.name %></h3>
    <ul>
      <% planet.characters.each do |character| %>
        <li><%= character.name %></li>
      <% end %>
    </ul>
  <% end %>

  <% unless planet.species.empty? %>
    <h3>Species of <%= planet.name %></h3>
    <ul>
      <% planet.species.each do |specy| %>
        <li><%= specy.name %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>